class Solution {
  public:
    void pushZerosToEnd(vector<int>& arr) {
        int n = arr.size();
        int insertPos = 0; 
        
        for (int i = 0; i < n; i++) {
            if (arr[i] != 0) {
                arr[insertPos] = arr[i];
                insertPos++;
            }
        }
        
        for (int i = insertPos; i < n; i++) {
            arr[i] = 0;
        }
    }
};