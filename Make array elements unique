// User function Template for C++

class Solution {
  public:
    int minIncrements(vector<int>& arr) {
        // Code here
        int n=arr.size();
        int operation=0;
        sort(arr.begin(),arr.end());
        for(int i=1;i<n;i++)
        {
            if(arr[i]<=arr[i-1])
            {
                int needed=arr[i-1]+1;
                operation+=needed-arr[i];
                arr[i]=needed;
            }
        }
        return operation;
    }
};