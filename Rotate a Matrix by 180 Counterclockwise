class Solution {
  public:
    void rotateMatrix(vector<vector<int>>& mat) {
        // Code here
        int n=mat.size();
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(i<n-1-i||(i==n-1-i&&j<n-1-j))
                {
                    swap(mat[i][j],mat[n-1-i][n-1-j]);
                }
            }
        }
    }
};