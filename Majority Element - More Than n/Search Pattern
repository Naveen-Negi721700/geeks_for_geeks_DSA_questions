class Solution {
  public:
    vector<int> search(string &pat, string &txt) {
        // code here
        int n=txt.length();
        int m=pat.length();
        vector<int>ans;
        for(int i=0;i<=n;i++)
        {
            if(txt.substr(i,m)==pat)
            {
                ans.push_back(i);
            }
        }
        return ans;
    }
};